{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/ping",
            "destination": "/api/ping.js"
        },
        {
            "source": "/api/test",
            "destination": "/api/test.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "outputDirectory": "dist"
}